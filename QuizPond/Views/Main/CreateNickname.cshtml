@model PlayerInfoVM


<div class="text-center">    
    <h4>@Model.QuizName</h4>
    <br />
    <h4>Create a nickname</h4>
    <br />
    <form asp-action="CreateNickname" method="post">
        <input asp-for="QuizName" type="hidden" />
        <input asp-for="GameCode" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row form-group justify-content-center">
            <input asp-for="NickName" placeholder="Enter nickname Here" class="form-control" style="width: 12.5em;" />
        </div>
        <br />
        <div class="row justify-content-center">
            <button class="btn btn-primary" type="submit">Next</button>
        </div>
    </form>
</div>



